{% extends "common/base_secure.twig" %}
{% block currentPage %}Users{% endblock %}
{% block content %}
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.username}}</td>
                        <td><a href="{{ url('user', {id: user.id}) }}">Edit</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% include "common/pagination.twig" %}
        <a href="{{ url('user', {id: 0}) }}" class="btn">Create New User</a>
{% endblock %}